@page "/"
@using System.Text.Json
@using System.Text.Json.Nodes
@inject IHttpServiceClient _httpService
<PageTitle>Home</PageTitle>
@if (oContent != null)
{
    var heros = oContent?["heros"]?.AsArray();
    <div class="hero-12 position-relative" id="hero">
        <div class="swiper th-slider overflow-hidden" id="heroSlide12"
             data-slider-options='{"effect":"fade","autoHeight":true}'>
            <div class="swiper-wrapper">
                @{
                    if (heros != null)
                    {
                        foreach (var item in heros)
                        {
                            <div class="swiper-slide">
                                <div class="hero-inner">
                                    <div class="th-hero-bg" data-bg-src="img/@item!["imagePath"]"></div>
                                    <div class="container">
                                        <div class="hero-style12">
                                            <h1 class="hero-title text-white mw-75" data-ani="slideinup"
                                                data-ani-delay="0.4s">@item!["title"]</h1>
                                            <p class="hero-desc" data-ani="slideinup"
                                               data-ani-delay="0.5s">@item!["detail"]</p>
                                            <div class="btn-group" data-ani="slideinup" data-ani-delay="0.6s">
                                                <a href="tour.html"
                                                   class="th-btn style1 th-icon">@Loc["Explore Tours"]</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
        <div class="hero-form">
            <SearchComponent Vertical="true"/>
        </div>
    </div>
    var oPackage = oContent?["packages"]?.AsObject();
    if (oPackage != null)
    {
        var oItems = oPackage?["items"]?.AsArray();
        <div class="booking-sec style2 position-relative">
            <div class="container">
                <div class="package-area">
                    <h3 class="box-title mb-35">@oPackage!["title"]</h3>
                    <div class="slider-area">
                        <div class="swiper th-slider slider-drag-wrap has-shadow" id="packageSlide"
                             data-slider-options='{"breakpoints":{"0":{"slidesPerView":1},"576":{"slidesPerView":"1"},"768":{"slidesPerView":"2"},"992":{"slidesPerView":"2"},"1200":{"slidesPerView":"4"}}}'>
                            <div class="swiper-wrapper">
                                @if (oItems != null)
                                {
                                    foreach (var item in oItems)
                                    {
                                        <div class="swiper-slide">
                                            <div class="package-card gsap-cursor">
                                                <h3 class="box-title"><img src="img/icon/location-dot4.svg" alt="">
                                                    <a
                                                        href="/">@item?["location"]</a></h3>
                                                <div class="box-img global-img">
                                                    <img src="img/@item?["imagePath"]"
                                                         alt="Image"></div>
                                                <div class="package-action">
                                                    <div>
                                                        <p class="box-desc">@item?["desc"]</p>
                                                        <h6 class="box-price"><span
                                                                class="currency">
                                                                @(Convert.ToDouble($"{item?["price"]}").AutoFormat())
                                                            </span>
                                                        </h6>
                                                    </div>
                                                    <a class="th-btn style4 th-icon"
                                                       href="destination.html">@Loc["Book now"]</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    var oAbout = oContent?["abouts"]?.AsObject();
    if (oAbout != null)
    {
        var oItems = oAbout["items"]?.AsArray();
        <div class="card mt-20 bg-gray-100i">
            <div class="card-body">
                <div class="about-area position-relative overflow-hidden my-5" id="about-sec">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-7">
                                <div class="img-box3">
                                    <div class="img1">
                                        <img src="img/normal/about_3_1.png" alt="About">
                                    </div>
                                    <div class="img2">
                                        <img src="img/normal/about_3_2.png" alt="About">
                                    </div>
                                    <div class="img3 movingX">
                                        <img src="img/normal/about_3_3.png" alt="About">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-5">
                                <div class="ps-xl-4">
                                    <div class="title-area mb-20 pe-xxl-5 me-xxl-5">
                                        <span class="sub-title style1">@oAbout["title"]</span>
                                        <h2 class="sec-title mb-20 pe-xl-5 me-xl-5 heading">@oAbout["subtitle"]</h2>
                                    </div>
                                    @if (oItems != null)
                                    {
                                        var images = oAbout["imagePath"]?.AsArray();
                                        <div class="about-item-wrap">
                                            @for (var i = 0; i < oItems.Count; i++)
                                            {
                                                <div class="about-item style2">
                                                    <div class="about-item_img">
                                                        <img src="img/@images?[i]?.AsValue()" alt="">
                                                    </div>
                                                    <div class="about-item_centent">
                                                        <h5 class="box-title">@oItems[i]?["title"]</h5>
                                                        <p class="text-muted fs-4">@oItems[i]?["detail"]</p>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    <div class="mt-35">
                                        <a href="/" class="th-btn style1 th-icon">Learn More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    var oTour = oContent?["tours"]?.AsObject();
    if (oTour != null)
    {
        var oItems = oTour["items"]?.AsArray();
        <section class="bg-opacity-5 bg-primary position-relative overflow-hidden space-bottom" id="service-sec">
            <div class="container">
                <div class="row mt-20">
                    <div class="col-lg-7 offset-lg-3">
                        <div class="title-area text-center">
                            <span class="sub-title">@oTour["title"]</span>
                            <h2 class="sec-title">@oTour["subtitle"]</h2>
                        </div>
                    </div>
                </div>
                @if (oItems != null)
                {
                    <div class="slider-area tour-slider">
                        <div class="swiper th-slider has-shadow slider-drag-wrap"
                             data-slider-options='{"breakpoints":{"0":{"slidesPerView":1},"576":{"slidesPerView":"1"},"768":{"slidesPerView":"2"},"992":{"slidesPerView":"2"},"1200":{"slidesPerView":"3"},"1300":{"slidesPerView":"3"}}}'>
                            <div class="swiper-wrapper">
                                @foreach (var item in oItems)
                                {
                                    <div class="swiper-slide">
                                        <div class="tour-box style4 th-ani gsap-cursor">
                                            <div class="tour-box_img global-img">
                                                <img src="img/@item?["imagePath"]" alt="image">
                                            </div>
                                            <div class="tour-content">
                                                <h3 class="box-title">
                                                    <a href="/">@item?["desc"]</a>
                                                </h3>
                                                <div class="tour-rating">
                                                    <div class="star-rating" role="img"
                                                         aria-label="Rated 5.00 out of 5">
                                                            <span style="width:100%">
                                                                Rated <strong class="rating">5.00</strong>
                                                                out of 5 based on <span
                                                                    class="rating">@item?["star"]</span>
                                                                (@item?["star"] Rating)
                                                            </span>
                                                    </div>
                                                    <a href="/" class="woocommerce-review-link">
                                                        (<span class="count">4.8</span>
                                                        Rating)
                                                    </a>
                                                </div>
                                                <h4 class="tour-box_price">
                                                    <span
                                                        class="currency">@(Convert.ToDouble($"{item?["price"]}").AutoFormat())</span>/Person
                                                </h4>
                                                <div class="tour-action">
                                                        <span>
                                                            <i class="fas fa-clock"></i>
                                                            @item?["duration"]
                                                        </span>
                                                    <a href="/" class="th-btn style4 th-icon">@Loc["Book now"]</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }

    var oGallery = oContent?["gallery"]?.AsObject();
    if (oGallery != null)
    {
        var oItems = oGallery?["items"]?.AsArray();
        <div class="gallery-area mt-20">
            <div class="container th-container">
                <div class="title-area text-center">
                    <span class="sub-title">@oGallery!["title"]</span>
                    <div class="sec-title">@oGallery["subtitle"]</div>
                </div>
                @if (oItems != null)
                {
                    <div class="row gy-10 gx-10 justify-content-center align-items-center">
                        <div class="col-md-6 col-lg-2">
                            <div class="gallery-card">
                                <div class="box-img global-img">
                                    <a href="img/gallery/gallery_1_1.jpg" class="popup-image">
                                        <div class="icon-btn">
                                            <i class="fas fa-magnifying-glass-plus"></i>
                                        </div>
                                        <img src="img/gallery/gallery_1_1.jpg" alt="gallery image">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-2">
                            <div class="gallery-card">
                                <div class="box-img global-img">
                                    <a href="img/gallery/gallery_1_2.jpg" class="popup-image">
                                        <div class="icon-btn">
                                            <i class="fas fa-magnifying-glass-plus"></i>
                                        </div>
                                        <img src="img/gallery/gallery_1_2.jpg" alt="gallery image">
                                    </a>
                                </div>
                            </div>
                            <div class="gallery-card">
                                <div class="box-img global-img">
                                    <a href="img/gallery/gallery_1_3.jpg" class="popup-image">
                                        <div class="icon-btn">
                                            <i class="fas fa-magnifying-glass-plus"></i>
                                        </div>
                                        <img src="img/gallery/gallery_1_3.jpg" alt="gallery image">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-2">
                            <div class="gallery-card">
                                <div class="box-img global-img">
                                    <a href="img/gallery/gallery_1_4.jpg" class="popup-image">
                                        <div class="icon-btn">
                                            <i class="fas fa-magnifying-glass-plus"></i>
                                        </div>
                                        <img src="img/gallery/gallery_1_4.jpg" alt="gallery image">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-2">
                            <div class="gallery-card">
                                <div class="box-img global-img">
                                    <a href="img/gallery/gallery_1_5.jpg" class="popup-image">
                                        <div class="icon-btn">
                                            <i class="fas fa-magnifying-glass-plus"></i>
                                        </div>
                                        <img src="img/gallery/gallery_1_5.jpg" alt="gallery image">
                                    </a>
                                </div>
                            </div>
                            <div class="gallery-card">
                                <div class="box-img global-img">
                                    <a href="img/gallery/gallery_1_6.jpg" class="popup-image">
                                        <div class="icon-btn">
                                            <i class="fas fa-magnifying-glass-plus"></i>
                                        </div>
                                        <img src="img/gallery/gallery_1_6.jpg" alt="gallery image">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-2">
                            <div class="gallery-card">
                                <div class="box-img global-img">
                                    <a href="img/gallery/gallery_1_7.jpg" class="popup-image">
                                        <div class="icon-btn">
                                            <i class="fas fa-magnifying-glass-plus"></i>
                                        </div>
                                        <img src="img/gallery/gallery_1_7.jpg" alt="gallery image">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    var oCounters = oContent?["counters"]?.AsArray();
    if (oCounters != null)
    {
        <div class="counter-area space">
            <div class="container">
                <div class="row">
                    @foreach (var item in oCounters)
                    {
                        <div class="col-sm-6 col-xl-3 counter-card-wrap">
                            <div class="counter-card">
                                <div class="counter-shape">
                                    <span></span>
                                </div>
                                <div class="media-body">
                                    <h3 class="box-number">
                                        <span class="counter-number" data-kt-countup="true"
                                              data-kt-countup-value="@item?["counterNumber"]">@item?["counterNumber"]</span>
                                        @item?["unit"]
                                    </h3>
                                    <h6 class="counter-title">@item?["title"]</h6>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    var oDestination = oContent?["destinations"]?.AsObject();
    if (oDestination != null)
    {
        var oItems = oDestination["items"]?.AsArray();
        <section class="bg-gray-100 position-relative overflow-hidden space" id="destination-sec">
            <div class="container">
                <div class="title-area text-center">
                    <span class="sub-title">@oDestination["title"]</span>
                    <h2 class="sec-title">@oDestination["subtitle"]</h2>
                </div>
                @if (oItems != null)
                {
                    <div class="slider-area">
                        <div class="swiper th-slider destinationSlide9 has-shadow" id="destinationSlide9"
                             data-slider-options='{"breakpoints":{"0":{"slidesPerView":1},"576":{"slidesPerView":"1"},"768":{"slidesPerView":"2"},"992":{"slidesPerView":"2"},"1200":{"slidesPerView":"3"},"1300":{"slidesPerView":"4"}}}'>
                            <div class="swiper-wrapper">
                                @foreach (var item in oItems)
                                {
                                    <div class="swiper-slide">
                                        <div class="destination-item4 th-ani">
                                            <div class="destination-item4_img global-img"
                                                 data-mask-src="img/destination/shape.png">
                                                <img src="img/@item?["imagePath"]" alt="image" class="h-400px">
                                            </div>
                                            <div class="destination-content">
                                                <h3 class="box-title">
                                                    <a href="destination-details.html">
                                                        <img src="img/icon/location-dot4.svg" alt="">@item?["title"]
                                                    </a>
                                                </h3>
                                            </div>
                                            <a href="/" class="icon-btn">
                                                <img src="img/icon/left-arrow4.svg" alt="">
                                            </a>
                                        </div>
                                    </div>
                                }
                                @foreach (var item in oItems)
                                {
                                    <div class="swiper-slide">
                                        <div class="destination-item4 th-ani">
                                            <div class="destination-item4_img global-img"
                                                 data-mask-src="img/destination/shape.png">
                                                <img src="img/@item?["imagePath"]" alt="image" class="h-400px">
                                            </div>
                                            <div class="destination-content">
                                                <h3 class="box-title">
                                                    <a href="destination-details.html">
                                                        <img src="img/icon/location-dot4.svg" alt="">@item?["title"]
                                                    </a>
                                                </h3>
                                            </div>
                                            <a href="/" class="icon-btn">
                                                <img src="img/icon/left-arrow4.svg" alt="">
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <button data-slider-prev="#destinationSlide9" class="slider-arrow style6 slider-prev">
                            <img src="img/icon/right-arrow2.svg" alt="">
                        </button>
                        <button data-slider-next="#destinationSlide9" class="slider-arrow style6 slider-next">
                            <img src="img/icon/left-arrow2.svg" alt="">
                        </button>
                    </div>
                    <div class="destination-btn text-center" style="margin-top: 60px">
                        <a href="destination.html" class="th-btn style1 th-icon">View All</a>
                    </div>
                }

            </div>
        </section>
    }

    var oChooseUs = oContent?["chooseUs"]?.AsObject();
    if (oChooseUs != null)
    {
        var oItems = oChooseUs["items"]?.AsArray();
        <div class="space-bottom mt-10">
            <div class="container">
                <div class="row gy-4 align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="ps-xl-5">
                            <div class="title-area">
                                <span class="sub-title style1">@oChooseUs["title"]</span>
                                <h2 class="sec-title">@oChooseUs["subtitle"]</h2>
                                <p class="fs-3">@oChooseUs["detail"]</p>
                            </div>
                            @if (oItems != null)
                            {
                                foreach (var item in oItems)
                                {
                                    <div class="choose-about style2 hover-item item-active">
                                        <div class="choose-about_icon">
                                            <img src="img/@item?["imagePath"]" alt="image">
                                        </div>
                                        <div class="media-body">
                                            <h3 class="box-title">@item?["title"]</h3>
                                            <p class="choose-about_text">@item?["detail"]</p>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="img-box11">
                            <div class="img1">
                                <img src="img/normal/about_2_1.jpg" class="img-fluid" alt="About">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    var oTourGuide = oContent?["tourGuide"]?.AsObject();
    if (oTourGuide != null)
    {
        var oItems = oTourGuide["items"]?.AsArray();
        <section class="bg-smoke space overflow-hidden" data-bg-src="img/bg/team_bg_1.png">
            <div class="container z-index-common">
                <div class="title-area text-center">
                    <span class="sub-title">@oTourGuide["title"]</span>
                    <h2 class="sec-title">@oTourGuide["subtitle"]</h2>
                </div>
                <div class="slider-area">
                    <div class="swiper th-slider teamSlider1 has-shadow" id="teamSlider1"
                         data-slider-options='{"breakpoints":{"0":{"slidesPerView":1},"576":{"slidesPerView":"1"},"768":{"slidesPerView":"2"},"992":{"slidesPerView":"3"},"1200":{"slidesPerView":"4"}}}'>
                        <div class="swiper-wrapper">
                            @if (oItems != null)
                            {
                                foreach (var item in oItems)
                                {
                                    <div class="swiper-slide">
                                        <div class="th-team team-box">
                                            <div class="team-img">
                                                <img src="img/@item?["imagePath"]" alt="Team">
                                            </div>
                                            <div class="team-content">
                                                <div class="media-body">
                                                    <h3 class="box-title">
                                                        <a href="tour-guider-details.html">@item?["title"]</a>
                                                    </h3>
                                                    <span class="team-desig">@item?["detail"]</span>
                                                    <div class="th-social">
                                                        <a target="_blank" href="https://facebook.com/">
                                                            <i class="fab fa-facebook-f"></i>
                                                        </a>
                                                        <a target="_blank" href="https://twitter.com/">
                                                            <i class="fab fa-twitter"></i>
                                                        </a>
                                                        <a target="_blank" href="https://instagram.com/">
                                                            <i class="fab fa-instagram"></i>
                                                        </a>
                                                        <a target="_blank" href="https://linkedin.com/">
                                                            <i class="fab fa-linkedin-in"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                foreach (var item in oItems)
                                {
                                    <div class="swiper-slide">
                                        <div class="th-team team-box">
                                            <div class="team-img">
                                                <img src="img/@item!["imagePath"]" alt="Team">
                                            </div>
                                            <div class="team-content">
                                                <div class="media-body">
                                                    <h3 class="box-title">
                                                        <a href="tour-guider-details.html">@item?["title"]</a>
                                                    </h3>
                                                    <span class="team-desig">@item?["detail"]</span>
                                                    <div class="th-social">
                                                        <a target="_blank" href="https://facebook.com/">
                                                            <i class="fab fa-facebook-f"></i>
                                                        </a>
                                                        <a target="_blank" href="https://twitter.com/">
                                                            <i class="fab fa-twitter"></i>
                                                        </a>
                                                        <a target="_blank" href="https://instagram.com/">
                                                            <i class="fab fa-instagram"></i>
                                                        </a>
                                                        <a target="_blank" href="https://linkedin.com/">
                                                            <i class="fab fa-linkedin-in"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <div class="slider-pagination"></div>
                    </div>
                </div>
            </div>
        </section>
    }

    var oQuestion = oContent?["askQuestion"]?.AsObject();
    if (oQuestion != null)
    {
        var oItems = oQuestion["items"]?.AsArray();
        <div class="position-relative space-bottom overflow-hidden overflow-hidden mt-20" id="faq-sec">
            <div class="container">
                <div class="row gy-4 align-items-center justify-content-between">
                    <div class="col-xl-6">
                        <div class="pe-xl-5">
                            <div class="title-area mb-30"><span class="sub-title">@oQuestion["title"]</span>
                                <h2 class="sec-title">@oQuestion["subtitle"]</h2>
                            </div>
                            @if (oItems != null)
                            {
                                var i = 0;
                                <div class="accordion" id="faqAccordion">
                                    @foreach (var item in oItems)
                                    {
                                        <div class="accordion-card style3">
                                            <div class="accordion-header" id="collapse-item-1">
                                                <button class="accordion-button"
                                                        type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#collapse-@i"
                                                        aria-expanded="true" aria-controls="collapse-1">
                                                    @item?["title"]
                                                </button>
                                            </div>
                                            <div id="collapse-@i"
                                                 class="accordion-collapse collapse @(i == 0 ? "show" : "")"
                                                 aria-labelledby="collapse-item-@i" data-bs-parent="#faqAccordion">
                                                <div class="accordion-body">
                                                    <p class="faq-text">@item?["detail"]</p>
                                                </div>
                                            </div>
                                        </div>
                                        i++;
                                    }
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="faq-img3 ps-xl-3">
                            <div class="img1"><img src="img/normal/faq_img2.png" alt="faq"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    var oTesti = oContent?["testimonial"]?.AsObject();
    if (oTesti != null)
    {
        var oItems = oTesti["items"]?.AsArray();
        <section class="testi-area11 overflow-hidden space" id="testi-sec">
            <div class="container-fluid p-0">
                <div class="title-area text-center">
                    <span class="sub-title">@oTesti["title"]</span>
                    <h2 class="sec-title">@oTesti["subtitle"]</h2>
                </div>
                @if (oItems != null)
                {
                    <div class="slider-area">
                        <div class="swiper th-slider slider-drag-wrap testiSlider11" id="testiSlider0"
                             data-slider-options='{"centeredSlides":true,"breakpoints":{"0":{"slidesPerView":1},"576":{"slidesPerView":"1"},"768":{"slidesPerView":"2"},"992":{"slidesPerView":"3"},"1300":{"slidesPerView":"4"}}}'>
                            <div class="swiper-wrapper">
                                @foreach (var item in oItems)
                                {
                                    <div class="swiper-slide">
                                        <div class="testi-card4 gsap-cursor">
                                            <div class="testi-card4_review">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
