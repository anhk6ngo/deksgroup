@code{
    private JsonObject? oContent { get; set; } = null;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var result = await _httpService.GetAsync<Result<string>>($"{RailEndpoints.Rail}{RailEndpoints.GetContent}");
            oContent = JsonSerializer.Deserialize<JsonObject>(result.Data);
            StateHasChanged();
            await JsRuntime.InvokeVoidAsync("KTComponents.init");
            await JsRuntime.InvokeVoidAsync("initTheme");
        }
    }

